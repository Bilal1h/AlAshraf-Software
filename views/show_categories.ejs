<!DOCTYPE html>
<html>

<head>
  <title>Show Categories</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.css" />
</head>

<body class="bg-zinc-800 text-white">
  <div class="w-full h-36 flex items-center justify-center mb-12 flex-col">
    <a href="/<%=Year%>/month/<%=monthName%>/" class="bg-blue-800 text-white px-2 py-2 mb-6">Go Back</a>
    <h1 class="text-5xl"><%= monthName %> Categories</h1>
  </div>

  <% if (housesobjarr.length === 0) { %>
    <div class="w-full text-center text-2xl text-white">No data to show.</div>
  <% } else { %>
    <div class="w-[100vw] flex justify-center items-center">
      <table id="myTable" class="w-full px-52">
        <thead>
          <tr>
            <th>Category Name</th>
            <th>Total Amount to be Collected</th>
            <th>Total Amount Collected</th>
            <th>Show House</th>
            <th>House Addition</th>
            <th>Additional Floor</th>
          </tr>
        </thead>
        <tbody>
          <% housesobjarr.forEach(function(category) { %>
            <tr>
              <td class="rounded-[1px]"><%= category.categoryName %></td>
              <td class="rounded-[1px]"><%= category.totalAmountToBeCollected %></td>
              <td class="rounded-[1px]"><%= category.totalAmountCollected %></td>
              <td><a href="/show/<%=Year%>/<%=monthName%>/category/<%= category.categoryName %>/data"><code class="bg-indigo-700 px-2">Show House</code></a></td>
              <td><a href="/<%=Year%>/<%=monthName%>/<%=category.categoryName%>/addhouse"><code class="bg-indigo-700 px-2">Add House</code></a></td>
              <td><a href="/<%=Year%>/<%=monthName%>/edit/<%= category.categoryName %>/additional-floor"><code class="bg-indigo-700 px-2">Edit Per Additional Floor</code></a></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } %>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.js"></script>
  <script>
    let table = new DataTable('#myTable');
  </script>
</body>

</html>
