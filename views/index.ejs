          <input type="email" placeholder="Email" name="secret" />
          <input type="password" placeholder="Password" name="password" />
          <button type="submit">Create Account</button>
        </form>
      </div> 
      <!-- sign Up form section end-->

      <!-- sign in form section start-->
      <div class="form sign_in" id="signinform">
        <form action="/login" method="post">
          <!-- heading -->
          <h1 style="color:#fff; font-size: 38px;">Login In</h1>
          <!-- social media icons -->
         
          <span style="color:#fff;">Login In with your Account</span>
          <!-- input fields start -->
          <input type="text" placeholder="Username" name="username" />
          <input type="password" placeholder="Password" name="password" />
          <a href="#">Forgot your password?</a>

          <button type="submit">Login</button>
          <!-- input fields end -->
        </form>
      </div>
