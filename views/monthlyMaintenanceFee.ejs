<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Monthly Maintenance Fee</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-gray-200 p-6">
    <h1 class="text-3xl font-bold text-center mb-8 text-white">Monthly Maintenance Fee</h1>
    <% 
    const orderedMonths = [
        "January", "February", "March", "April", "May", "June",
        "July", "August", "September", "October", "November", "December"
    ];
    %>
    
    <div class="container mx-auto grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        <% orderedMonths.forEach(month => { %>
            <% if (dataMap[month]) { %> <!-- Ensure month exists in dataMap -->
                <div class="bg-gray-800 rounded-lg p-6 shadow-lg hover:shadow-xl transition-shadow">
                    <h2 class="text-xl font-semibold text-center text-white mb-4"><%= month %></h2>
                    <ul class="space-y-2">
                        <% dataMap[month].forEach(category => { %>
                            <li class="bg-gray-700 px-4 py-2 rounded-lg shadow-md">
                                <span class="font-medium text-blue-400"><%= category.name %></span>: 
                                <span class="text-green-400">Rs. <%= category.amount_for_G %></span>
                            </li>
                        <% }) %>
                    </ul>
                </div>
            <% } %>
        <% }) %>
    </div>
    
</body>
</html>
